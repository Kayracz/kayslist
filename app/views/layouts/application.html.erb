<!DOCTYPE html>
<html>
  <head>
    <title>Kayslist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">
   <%= render "layouts/breadcrumb_nav" unless is_home? %>
  </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="main">
       <div class="main-left">
        <p><strong><%= link_to "Craiglist Clone", root_path %></strong></p>
        <%= link_to "Crear nuevo anuncio", new_post_path if controller.controller_name == "public" %><br>

        <%= link_to "My Account", new_account_session_path unless account_signed_in? %>

        <%= render "categories/category_sidebar" if controller.controller_name == "categories" %>
       </div>
       <div class="main-right">
          <%= yield %>
       </div>
    </div>
    </body>
</html>


