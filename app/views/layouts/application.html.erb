<!DOCTYPE html>
<html>
  <head>
    <title>Kayslist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">
   <%= render "layouts/breadcrumb_nav" %>
  </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="main">
       <div class="main-left">
        <p><strong><%= link_to "Craiglist Clone", root_path %></strong></p>

        <p><%= link_to "Crear nuevo anuncio", new_post_path %></p>

        <p><%= link_to "My Account", new_account_session_path unless account_signed_in? %></p>

        <%= render "categories/category_sidebar" if controller.controller_name == "categories" %>



        <% if is_home? %>
        <div class="pages">
          <p><%= link_to "help, faqs, abuse, legal", faqs_path%></p>
          <p><%= link_to "avoid scams and fraud", scams_path %></p>
          <p><%= link_to "personal safety tips", safety_path %></p>
          <p><%= link_to "terms of use", terms_path %></p>
        </div>
        <% end %>

       </div>
       <div class="main-right">
          <%= yield %>
       </div>
    </div>
    </body>
</html>


